@model IEnumerable<GAPv3.ViewModels.NormViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    <!-- Button trigger modal -->
    @Html.ActionLink("Create new", "CreatePartial", "Norms", new { @class = "btn btn-primary", data_target = "#modal-container", data_toggle = "modal" })
</p>

@{ Html.RenderPartial("_modal"); }

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HaveAdditionalItems)
        </th>
        <th>Akcija</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HaveAdditionalItems)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.NormId }, new { data_target = "#modal-container", data_toggle = "modal" }) |
                @Html.ActionLink("Details", "Details", new { id = item.NormId }, new { data_target = "#modal-container", data_toggle = "modal" })
            </td>
        </tr>
    }

</table>

