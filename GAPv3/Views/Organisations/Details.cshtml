        </div>
        <div class="form-row">
            <div class="col-form-label col-md-3 font-weight-bold">@Html.DisplayNameFor(model => model.GuardService):</div>
            <div class="col-form-label col-md-9">@Html.DisplayFor(model => model.GuardService)</div>
        </div>
        <div class="form-row">
            <div class="col-form-label col-md-3 font-weight-bold">@Html.DisplayNameFor(model => model.VideoSurveillance):</div>
