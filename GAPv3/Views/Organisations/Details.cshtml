@model GAPv3.Models.Organisation

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="card">
    <div class="card-header">
        Detalji organizacije
    </div>

    <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
        <p>@Html.DisplayFor(model => model.Address)</p>
        
        <div class="form-row">
            <div class="col-form-label col-md-3 font-weight-bold">@Html.DisplayNameFor(model => model.Name):</div>
            <div class="col-form-label col-md-9">
                @foreach (var user in Model.Users)
                {
                    var text = user.Name + " " + user.LastName;
                    <span class="badge badge-secondary">@text</span>
                }
            </div>
        </div>

        <div class="form-row">
            <div class="col-form-label col-md-3 font-weight-bold">@Html.DisplayNameFor(model => model.Ownership):</div>
            <div class="col-form-label col-md-9">@Html.DisplayFor(model => model.Ownership)</div>
        </div>
        
        <div class="form-row">
            <div class="col-form-label col-md-3 font-weight-bold">@Html.DisplayNameFor(model => model.Type):</div>
            <div class="col-form-label col-md-9">@Html.DisplayFor(model => model.Type)</div>
        </div>
        <div class="form-row">
            <div class="col-form-label col-md-3 font-weight-bold">@Html.DisplayNameFor(model => model.EmployeesNumber):</div>
