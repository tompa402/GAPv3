@model GAPv3.ViewModels.UserOrganisationViewModel

@{
    ViewBag.Title = "Create";
}
@Styles.Render("~/Content/chosen")
<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <h4>Organisation</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.EditorFor(model => model.Organisation, "_Organisation")

        <div class="form-group row">
            @Html.LabelFor(model => model.SelectedUsers, htmlAttributes: new { @class = "col-form-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBox("SelectedUsers", Model.UsersList as MultiSelectList, new { @class = "form-control chosen-select", data_placeholder = "Odaberite člana organizacije" })
                @Html.ValidationMessageFor(model => model.SelectedUsers, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/chosen")
    <script>
        $(document).ready(function () {
            console.log("ready!");
        });
        $(".chosen-select").chosen();
    </script>
}
