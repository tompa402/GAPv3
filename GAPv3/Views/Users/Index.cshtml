@using GAPv3.Models
@model IEnumerable<GAPv3.Models.User>

@{
    ViewBag.Title = "Unos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    @Html.ActionLink("Unos novog", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JMBAG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modified)
        </th>
       <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr class ="@(item.IsActive ? "table-success": "table-danger")">
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JMBAG)
            </td>
          <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modified)
            </td>
            <td>
                @Html.ActionLink("Uredi", "Update", new { id=item.UserId }) |
                @Html.ActionLink("Detalji", "Details", new { id=item.UserId }) |
                @*@Html.ActionLink("Delete", "Delete", new { id=item.UserId })*@
                @Html.ActionLink((item.IsActive ? "Deaktiviraj" : "Aktiviraj"), "Deactivate", new { id = item.UserId })
                
            </td>
        </tr>
    }

</table>